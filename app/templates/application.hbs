            <div id="bodyContent">
              
<div class="row">
  <div class="col-xs-12">
    <form method="post">
      <input class="form-control" id="addname" name="addname" type="text" value="">
      <button {{action "submitPerson"}} class="btn btn-info" style="margin:1em;"> Bejelentő Hozzáadása</button>
    </form>
  </div>  
</div>
<div class="row">
    <div class="col-xs-12">
        <hr>
        <form method="post">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Hozzárendelés</th>
                        <th>Bejelentő</th>
                        <th>Leírás</th>
                        <th>Hely</th>
                        <th>Módosítás</th>
                        <th>Törlés</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each model.errors}}
                    <tr>
                        <td id="{{id}}" style="max-width:80px;overflow:hidden;text-overflow:ellipsis;">{{id}} {{yield}}</td>
                        <td>{{assignedTo.name}}</td>
                        <td>{{name}}</td>
                        <td>{{description}}</td>
                        <td>{{location}}</td>
                        <td><button {{action "toggle" id name description location assignedTo.id}} class="btn btn-default btn-sm">Szerkesztés</button></td>
                        <td><button {{action "deleteError" id}} class="btn btn-warning btn-sm">×</button></td>
                    </tr>
                    {{/each}}
    
                    {{#if toggleDisabled}}
                    <tr>
                        <td>&nbsp;<input type="hidden" id="id_edit"></td>
                        <td>
                            <select name="assignedTo" id="assignedTo_edit" class="form-control">
                            {{#each model.people}}
                                <option value="{{id}}">{{name}} -- {{id}}</option>
                            {{/each}}
                            </select>
                        </td>
                        <td><input class="form-control" id="name_edit" name="name" type="text" value="{{data.name}}"></td>
                        <td><input class="form-control" id="description_edit" name="description" type="text" value="{{data.description}}"></td>
                        <td><input class="form-control" id="location_edit" name="location" type="text" value="{{data.location}}"></td>
                        <td>&nbsp;</td>
                        <td><button {{action "editError"}} class="btn btn-success">Mentés</button></td>
                        
                    </tr>
                    {{/if}}
                    <tr>
                        <td>&nbsp;</td>
                        <td>
                            <select name="assignedTo" id="assignedTo" class="form-control">
                            {{#each model.people}}
                                <option value="{{id}}">{{name}} -- {{id}}</option>
                            {{/each}}
                            </select>
                        </td>
                         <td><input class="form-control" id="name" name="name" type="text" value="{{data.name}}"></td>
                        <td><input class="form-control" id="description" name="description" type="text" value="{{data.description}}"></td>
                        <td><input class="form-control" id="location" name="location" type="text" value="{{data.location}}"></td>
                        <td>&nbsp;</td>
                        <td><button {{action "submit"}} class="btn btn-primary">Hozzáad</button></td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>

            </div>

        </div>
    </div>
</div>
